<?xml version="1.0" encoding="utf-8"?>
<full-backup-content xmlns:tools="http://schemas.android.com/tools">
    <!-- Include specific files or directories -->
    <include domain="sharedpref" path="user_preferences.xml" />
    <include domain="file" path="documents/" />
    <include domain="database" path="app_data.db" />

    <!-- Exclude unnecessary or sensitive files -->
    <exclude domain="file" path="cache/"
        tools:ignore="FullBackupContent" />
    <exclude domain="file" path="temp/"
        tools:ignore="FullBackupContent" />
    <exclude domain="sharedpref" path="debug_preferences.xml"
        tools:ignore="FullBackupContent" />
</full-backup-content>
