<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/main_bg">

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Aces Appointment"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Window"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <!-- Grid Layout for Buttons -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        app:columnCount="2"
        app:layout_constraintTop_toBottomOf="@id/subtitleText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Button 1: Cashier -->
        <LinearLayout
            android:id="@+id/buttonCashier"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="4dp"
            android:padding="16dp"
            android:background="@drawable/rounded_background_light_blue"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logo"
                android:contentDescription="Cashier Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cashier"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center" />
        </LinearLayout>

        <!-- Button 2: Window 2 -->
        <LinearLayout
            android:id="@+id/buttonWindow2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="4dp"
            android:padding="16dp"
            android:background="@drawable/rounded_background_light_blue"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logo"
                android:contentDescription="Window 2 Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Window 2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center" />
        </LinearLayout>

        <!-- Button 3: Window 3 -->
        <LinearLayout
            android:id="@+id/buttonWindow3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="4dp"
            android:padding="16dp"
            android:background="@drawable/rounded_background_light_blue"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logo"
                android:contentDescription="Window 3 Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Window 3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center" />
        </LinearLayout>

        <!-- Button 4: Window 4 -->
        <LinearLayout
            android:id="@+id/buttonWindow4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="4dp"
            android:padding="16dp"
            android:background="@drawable/rounded_background_light_blue"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logo"
                android:contentDescription="Window 4 Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Window 4"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center" />
        </LinearLayout>

        <!-- Button 5: Window 5 -->
        <LinearLayout
            android:id="@+id/buttonWindow5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/rounded_background_light_blue"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logo"
                android:contentDescription="Window 5 Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Window 5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center" />
        </LinearLayout>

        <!-- Button 6: Window 6 -->
        <LinearLayout
            android:id="@+id/buttonWindow6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/rounded_background_light_blue"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logo"
                android:contentDescription="Window 6 Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Window 6"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center" />
        </LinearLayout>

        <!-- Button 7: Window 7 -->
        <LinearLayout
            android:id="@+id/buttonWindow7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/rounded_background_light_blue"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logo"
                android:contentDescription="Window 7 Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Window 7"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center" />
        </LinearLayout>

        <!-- Button 8: Window 8 -->
        <LinearLayout
            android:id="@+id/buttonWindow8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/rounded_background_light_blue"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logo"
                android:contentDescription="Window 8 Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Window 8"
                android:elevation="4dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center" />
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
