<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WindowSelectionActivity">

    <!-- Title Text -->
    <TextView
        android:id="@+id/textSelectWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Window"
        android:textSize="24sp"
        android:textColor="#3b5b99"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Cashier Button -->
    <Button
        android:id="@+id/buttonCashier"
        android:layout_width="0dp"
        android:layout_height="60dp" android:text="Cashier"
        android:textColor="#ffffff"
        android:backgroundTint="#3b5b99"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="16dp" app:layout_constraintTop_toBottomOf="@+id/textSelectWindow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Window 1 Button -->
    <Button
        android:id="@+id/buttonWindow1"
        android:layout_width="0dp"
        android:layout_height="60dp"
    android:text="Window 1"
    android:textColor="#ffffff"
    android:backgroundTint="#3b5b99"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="16dp"
    app:layout_constraintTop_toBottomOf="@+id/buttonCashier"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Window 2 Button -->
    <Button
        android:id="@+id/buttonWindow2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Window 2"
        android:textColor="#ffffff"
        android:backgroundTint="#3b5b99"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonWindow1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Window 3 Button -->
    <Button
        android:id="@+id/buttonWindow3"
        android:layout_width="0dp"
        android:layout_height="60dp"
    android:text="Window 3"
    android:textColor="#ffffff"
    android:backgroundTint="#3b5b99"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="16dp"
    app:layout_constraintTop_toBottomOf="@+id/buttonWindow2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Window 4 Button -->
    <Button
        android:id="@+id/buttonWindow4"
        android:layout_width="0dp"
        android:layout_height="60dp"
    android:text="Window 4"
    android:textColor="#ffffff"
    android:backgroundTint="#3b5b99"
    android:layout_marginTop="20dp"
    app:layout_constraintTop_toBottomOf="@+id/buttonWindow3"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
