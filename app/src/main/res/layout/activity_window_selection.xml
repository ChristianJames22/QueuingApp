<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".WindowSelectionActivity">

    <!-- Title Text -->
    <TextView
        android:id="@+id/textSelectWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Select Window

        Transaction"
        android:textColor="#3b5b99"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Cashier Button -->
    <Button
        android:id="@+id/buttonCashier"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3b5b99"
        android:text="Cashier"
        android:textColor="#ffffff"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textSelectWindow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Window 1 Button -->
    <Button
        android:id="@+id/buttonWindow1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3b5b99"
        android:text="Window 1"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonCashier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Window 2 Button -->
    <Button
        android:id="@+id/buttonWindow2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3b5b99"
        android:text="Window 2"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonWindow1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Window 3 Button -->
    <Button
        android:id="@+id/buttonWindow3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3b5b99"
        android:text="Window 3"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonWindow2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Window 4 Button -->
    <Button
        android:id="@+id/buttonWindow4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3b5b99"
        android:text="Window 4"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonWindow3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Window 5 Button -->
    <Button
        android:id="@+id/buttonWindow5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3b5b99"
        android:text="Window 5"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonWindow4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Window 6 Button -->
    <Button
        android:id="@+id/buttonWindow6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3b5b99"
        android:text="Window 6"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonWindow5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Window 7 Button -->
    <Button
        android:id="@+id/buttonWindow7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3b5b99"
        android:text="Window 7"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonWindow6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Window 8 Button -->
    <Button
        android:id="@+id/buttonWindow8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3b5b99"
        android:text="Window 8"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonWindow7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
